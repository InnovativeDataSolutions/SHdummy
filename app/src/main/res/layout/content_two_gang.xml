    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ON"
            android:id="@+id/btnon2g"
            android:onClick="btnon2g"
            android:visibility="gone"
            android:background="@drawable/button_on"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="OFF"
            android:id="@+id/btnoff2g"
            android:onClick="btnoff2g"
            android:background="@drawable/button_off"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnon2g" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/relativeLayout3">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="OFF"
            android:id="@+id/btn1on2g"
            android:onClick="btn1on2g"
            android:visibility="gone"
            android:background="@drawable/button_on"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ON"
            android:id="@+id/btn1off2g"
            android:onClick="btn1off2g"
            android:background="@drawable/button_off"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>
