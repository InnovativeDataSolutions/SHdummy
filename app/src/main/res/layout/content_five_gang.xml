<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ids.smarthome.FiveGang"
    tools:showIn="@layout/activity_five_gang">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 GANG"
        android:textSize="25dp"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rltop"
        android:layout_below="@+id/textView"
        android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ON"
            android:visibility="gone"
            android:id="@+id/btnon5g"
            android:onClick="btnon5g"
            android:background="@drawable/button_on"
            android:drawableTop="@android:drawable/ic_lock_power_off" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="OFF"
            android:id="@+id/btnoff5g"
            android:onClick="btnoff5g"
            android:background="@drawable/button_off"
            android:drawableTop="@android:drawable/ic_lock_power_off" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="OFF"
            android:id="@+id/btn1off5g"
            android:onClick="btn1off5g"
            android:background="@drawable/button_off"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:drawableTop="@android:drawable/ic_lock_power_off"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ON"
            android:visibility="gone"
            android:id="@+id/btn1on5g"
            android:onClick="btn1on5g"
            android:background="@drawable/button_on"
            android:drawableTop="@android:drawable/ic_lock_power_off"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ON"
            android:visibility="gone"
            android:id="@+id/btn2on5g"
            android:onClick="btn2on5g"
            android:background="@drawable/button_on"
            android:drawableTop="@android:drawable/ic_lock_power_off"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="OFF"
            android:id="@+id/btn2off5g"
            android:onClick="btn2off5g"
            android:background="@drawable/button_off"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableTop="@android:drawable/ic_lock_power_off" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ON"
            android:visibility="gone"
            android:id="@+id/btn3on5g"
            android:onClick="btn3on5g"
            android:background="@drawable/button_on"
            android:drawableTop="@android:drawable/ic_lock_power_off" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="OFF"
            android:id="@+id/btn3off5g"
            android:onClick="btn3off5g"
            android:background="@drawable/button_off"
            android:drawableTop="@android:drawable/ic_lock_power_off" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="ON"
            android:visibility="gone"
            android:id="@+id/btn4on5g"
            android:onClick="btn4on5g"
            android:background="@drawable/button_on"
            android:drawableTop="@android:drawable/ic_lock_power_off"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="OFF"
            android:id="@+id/btn4off5g"
            android:onClick="btn4off5g"
            android:background="@drawable/button_off"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:drawableTop="@android:drawable/ic_lock_power_off" />

    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
